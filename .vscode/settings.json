{
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "ocaml.sandbox": {
    "kind": "opam",
    "switch": "coq-switch"
  }, 
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // Run whenever any file is saved
        "match": ".*",
        "cmd": "forester build"
      }
    ]
  }
}

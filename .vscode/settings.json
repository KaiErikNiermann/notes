{
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/target": true
  },
  "ocaml.sandbox": {
    "kind": "opam",
    "switch": "coq-switch"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // Run whenever any file is saved
        "match": ".*",
        "cmd": "npm run build"
      }
    ]
  },
  "files.trimTrailingWhitespace": true,
  "forester.path": "/root/.opam/coq-switch/bin/forester",
  "forester.useLSP": true,
  "[forester]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": true
  }
}
